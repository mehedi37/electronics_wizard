@model electronics_wizard.Models.Electronics

@{
    ViewData["Title"] = "Add New Electronics";
}

<h1>@ViewData["Title"]</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-white" style="background-color: purple;">
                    <h4 class="mb-0">Add New Electronics</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Sell" asp-action="AddElectronics" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="ElectronicName" class="form-label"></label>
                            <input asp-for="ElectronicName" class="form-control" />
                            <span asp-validation-for="ElectronicName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ElectronicModel" class="form-label"></label>
                            <input asp-for="ElectronicModel" class="form-control" />
                            <span asp-validation-for="ElectronicModel" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Image" class="form-label"></label>
                            <input asp-for="Image" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Stock" class="form-label"></label>
                            <input asp-for="Stock" class="form-control" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input type="hidden" asp-for="UserId" />
                        </div>
                        <button type="submit" class="btn btn-primary">Add Electronic</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
